<h1>Buffered File Upload</h1>
<a asp-controller="Home" asp-action="index">Home</a>
<br />
<a asp-controller="File" asp-action="AllFiles">AllFiles</a>
<br />
<a asp-controller="Account" asp-action="LogOff">Log off</a>
<br />

<hr />

<form asp-controller="File" asp-action="Upload" method="post" enctype="multipart/form-data">
    <input type="file" name="file" />
    <button type="submit">Upload File</button>
</form>

@if (ViewBag.Message != null)
{
    <div class="alert" style="margin-top:20px">
        @ViewBag.Message
    </div>
}